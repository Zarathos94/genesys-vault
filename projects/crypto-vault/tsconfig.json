{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "declaration": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es2020",
    "target": "ES2018",
    "lib": [
      "DOM",
      "ES2018"
    ],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "**/node_modules/*"
  ],
  "typedocOptions": {
    "entryPoints": ["src/crypto-vault.service.ts"],
    "out": "docs"
  }
}